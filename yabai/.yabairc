yabai -m config layout bsp
yabai -m config window_placement second_child

yabai -m config mouse_modifier fn
# yabai -m config focus_follows_mouse autoraise
# yabai -m config mouse_follows_focus on

yabai -m config top_padding    50
yabai -m config bottom_padding 50
yabai -m config left_padding   50
yabai -m config right_padding  50
yabai -m config window_gap     50


yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.95


# ===== Rules ==================================

yabai -m rule --add label="Finder" app="^Finder$" title=".*" manage=off
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off
yabai -m rule --add label="System Preferences" app="^System Preferences$" title=".*" manage=off
yabai -m rule --add label="App Store" app="^App Store$" manage=off
yabai -m rule --add label="Activity Monitor" app="^Activity Monitor$" manage=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add label="Dictionary" app="^Dictionary$" manage=off
yabai -m rule --add label="launcher" app="^launcher$" manage=off
yabai -m rule --add label="Mirth Connect Administrator Launcher" app="^Mirth Connect Administrator Launcher$" manage=off
yabai -m rule --add label="Software Update" title="Software Update" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add label="OpenGL renderer" title="OpenGL renderer" sticky=on
yabai -m rule --add label="Simulator" app="^Simulator$" title=".*" manage=off
yabai -m rule --add label="Preview" app="^Preview$" title=".*" manage=off
